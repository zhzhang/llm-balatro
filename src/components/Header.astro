---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.linkedin.com/in/zhjzhang/" target="_blank">
				<span class="sr-only">Visit Jordan's LinkedIn profile</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32"
					><path
						fill="currentColor"
						d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--bg-darker);
		backdrop-filter: none;
		border-bottom: 4px solid var(--balatro-blue);
		border-top: 2px solid var(--balatro-red);
		box-shadow: 
			inset 0 -2px 0 rgba(220, 38, 38, 0.5),
			0 4px 0 rgba(0, 0, 0, 0.5);
		position: sticky;
		top: 0;
		z-index: 1000;
	}
	
	h2 {
		margin: 0;
		font-size: 1.5em;
		font-family: 'Space Grotesk', sans-serif;
		font-weight: 700;
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text-primary);
		text-shadow: 
			2px 0 0 var(--balatro-red),
			-2px 0 0 var(--balatro-blue);
		transition: all 0.1s ease;
	}
	
	h2 a:hover {
		text-shadow: 
			3px 0 0 var(--balatro-red),
			-3px 0 0 var(--balatro-blue),
			0 0 10px rgba(220, 38, 38, 0.8);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	
	.internal-links {
		display: flex;
		gap: 0.5em;
	}
	
	nav a {
		padding: 1em 1em;
		color: var(--text-secondary);
		border-bottom: 0;
		text-decoration: none;
		text-transform: uppercase;
		font-family: 'Space Mono', monospace;
		font-weight: 700;
		letter-spacing: 0.05em;
		font-size: 1em;
		transition: all 0.1s ease;
		position: relative;
	}
	
	nav a::after {
		content: '';
		position: absolute;
		bottom: 8px;
		left: 10%;
		right: 10%;
		height: 3px;
		background: transparent;
		transition: all 0.1s ease;
	}
	
	nav a:hover {
		color: var(--text-primary);
		text-shadow: 
			2px 0 0 rgba(220, 38, 38, 0.7),
			-2px 0 0 rgba(37, 99, 235, 0.7);
	}
	
	nav a:hover::after {
		background: repeating-linear-gradient(
			90deg,
			var(--balatro-red) 0px,
			var(--balatro-red) 4px,
			var(--balatro-blue) 4px,
			var(--balatro-blue) 8px
		);
	}
	
	nav a.active {
		text-decoration: none;
		color: var(--balatro-cyan);
		text-shadow: 
			1px 0 0 rgba(220, 38, 38, 0.6),
			-1px 0 0 rgba(37, 99, 235, 0.6);
	}
	
	nav a.active::after {
		background: var(--balatro-cyan);
		box-shadow: 0 0 8px var(--balatro-cyan);
	}
	
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}
	
	.social-links a {
		color: var(--balatro-blue);
		transition: all 0.3s ease;
		padding: 0.5em;
	}
	
	.social-links a:hover {
		color: var(--balatro-red-bright);
		filter: drop-shadow(0 0 10px rgba(220, 38, 38, 0.8));
		transform: scale(1.1);
	}
	
	@media (max-width: 820px) {
		.social-links {
			display: none;
		}
		nav a {
			padding: 1em 0.5em;
			font-size: 0.8em;
		}
		h2 {
			font-size: 1.4em;
		}
	}
</style>
