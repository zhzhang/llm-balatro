---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { db, gameRuns } from 'astro:db';

// Query game runs and organize by agent and seed
const runs = await db.select().from(gameRuns).all();

// Get unique agents and seeds
const agents = [...new Set(runs.map(r => r.agent).filter((a): a is string => a !== null && a !== undefined))].sort();
const seeds = [...new Set(runs.map(r => r.seed).filter((s): s is string => s !== null && s !== undefined))].sort();

// Create a map for quick lookup: agent -> seed -> outcome
const outcomeMap = new Map<string, Map<string, string>>();
for (const run of runs) {
	if (!run.agent || !run.seed) continue;
	
	if (!outcomeMap.has(run.agent)) {
		outcomeMap.set(run.agent, new Map());
	}
	
	const outcome = run.won === 1 ? 'WON' : `Ante ${run.finalAnte ?? '?'}`;
	outcomeMap.get(run.agent)!.set(run.seed, outcome);
}
